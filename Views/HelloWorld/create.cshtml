@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Create Dog</h2>
<hr/>

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5>
                    <b>Enter Following Details</b>
                </h5>

            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">
                            Dog Name
                        </label>
                        <input type="text" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">
                            Age
                        </label>
                        <input type="number" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">

            </div>
        </div>

    </div>
</div>